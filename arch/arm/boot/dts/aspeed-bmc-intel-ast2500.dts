			bit-mask = <0x1>;
			bit-shift = <10>;
			read-only;
		};
		p2a-bridge {
			offset = <0x180>;
			bit-mask = <0x1>;
			bit-shift = <1>;
			read-only;
		};
		boot-2nd-flash {
			offset = <0x70>;
			bit-mask = <0x1>;
			bit-shift = <17>;
			read-only;
		};
		chip_id {
			offset = <0x150>;
			bit-mask = <0x0fffffff 0xffffffff>;
			bit-shift = <0>;
			read-only;
			reg-width = <64>;
			hash-data = "d44f9b804976fa23c2e25d62f16154d26520a7e24c5555095fd1b55c027804f1570dcd16189739c640cd7d9a6ce14944a2c4eaf1dc429eed6940e8a83498a474";
		};
	};
};

